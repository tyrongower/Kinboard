{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/kinboard/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com"
    ]
  },
  "Jwt": {
    "Secret": "REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_RANDOM_STRING_MINIMUM_32_CHARACTERS",
    "Issuer": "Kinboard.Api",
    "Audience": "Kinboard.Frontend"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/var/lib/kinboard/kinboard.db"
  }
}
